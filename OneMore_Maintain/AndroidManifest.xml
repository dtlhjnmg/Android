<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onemore.ble.maintain"
    android:versionCode="1"
    android:versionName="V1.0.1" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.onemore.ble.maintain.applications.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name="com.onemore.ble.maintain.activity.LauncherActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:windowSoftInputMode="stateHidden">
          </activity>
        <activity
            android:name="com.onemore.ble.maintain.activity.DeviceScanActivity"        
        	android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.onemore.ble.maintain.activity.DeviceControlActivity">
          </activity>

    </application>

</manifest>