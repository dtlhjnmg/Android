<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CodeTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NullTextAppearance" parent="android:TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="global_system_title_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="global_system_title_sub_name_text_style" parent="global_system_title_text_style">
        <item name="android:textSize">@dimen/title_sub_text_size</item>
    </style>

    <style name="global_system_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="global_system_white_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="list_sub_text_style">
        <item name="android:textSize">@dimen/title_sub_text_size</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="toggle_button_style">
        <item name="android:background">@drawable/button_list_toggle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:layout_marginRight">@dimen/time_function_list_item_right</item>
    </style>

    <style name="edit_time_function_seekbar_style">
        <item name="android:layout_width">@dimen/light_brightness_seekbar_width</item>
        <item name="android:layout_height">@dimen/light_brightness_seekbar_height</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:progressDrawable">@drawable/light_brightness_seekbar_img</item>
        <item name="android:thumb">@drawable/light_brightness_seekbar_thumb</item>
        <item name="android:max">100</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:maxHeight">@dimen/light_brightness_seekbar_height</item>
        <item name="android:minHeight">@dimen/light_brightness_seekbar_height</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="edit_time_function_button_style" parent="global_system_text_style">
        <item name="android:background">@null</item>
        <item name="android:onClick">titleMenuClick</item>
        <item name="android:textColor">@color/time_function_button_textcolor</item>
    </style>

    <style name="setting_button_style" parent="global_system_text_style">
        <item name="android:background">@null</item>
        <item name="android:onClick">titleMenuClick</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="popupwindow_one_button_style" parent="global_system_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/popupwindow_one_button_bg</item>
    </style>

    <style name="popupwindow_button_style" parent="global_system_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="popupwindow_button_left_style" parent="popupwindow_button_style">
        <item name="android:background">@drawable/popupwindow_button_left_bg</item>
    </style>

    <style name="popupwindow_button_right_style" parent="popupwindow_button_style">
        <item name="android:background">@drawable/popupwindow_button_right_bg</item>
    </style>

    <style name="popupwindow_list_style">
        <item name="android:divider">@drawable/line</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_wait_progress</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ble_label_title_style">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">40dp</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:textSize">@dimen/title_sub_text_size</item>
	    <item name="android:textColor">@color/black</item>
    </style>
    <style name="ble_label_content_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
	    <item name="android:layout_height">40dp</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:textSize">@dimen/normal_text_size</item>
	    <item name="android:textColor">@color/black</item>
    </style>
    <style name="button_ble_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
	    <item name="android:layout_height">@dimen/title_height</item>
	    <item name="android:layout_marginLeft">5dp</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:onClick">titleMenuClick</item>
    </style>
</resources>