<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_contace_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffefefe"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_about_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/setting_about_us_bg"
        android:contentDescription="@string/app_name" >
    </ImageView>

    <LinearLayout
        android:id="@+id/ll_contact_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_us_logo"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/contact_us_slogan"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/contact_us_version"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ib_contact_us_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_us_facebook"
                android:contentDescription="@string/app_name"
                android:gravity="left|center_vertical"
                android:onClick="titleMenuClick" />

            <ImageButton
                android:id="@+id/ib_contact_us_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/contact_us_weibo"
                android:contentDescription="@string/app_name"
                android:gravity="left|center_vertical"
                android:onClick="titleMenuClick" />

            <ImageButton
                android:id="@+id/ib_contact_us_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/contact_us_wechat"
                android:contentDescription="@string/app_name"
                android:gravity="left|center_vertical"
                android:onClick="titleMenuClick" />

            <ImageButton
                android:id="@+id/ib_contact_us_wooderful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:background="@drawable/contact_us_umoo"
                android:contentDescription="@string/app_name"
                android:gravity="left|center_vertical"
                android:onClick="titleMenuClick" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/top_title_layout" />

</FrameLayout>